{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "afms": ["components/index.tsx"],
      "afms/es/*": ["components/*"]
    },
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "lib", "es", "example"]
}